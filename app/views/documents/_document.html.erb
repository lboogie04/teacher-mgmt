<div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <div style="display: block;">
        <%= link_to document_path(document), style: "display:inline-block;" do %>
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white"><%= document.name %></h5>
        <% end %>
        <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300" style="display: inline-block;"><%= document.file.filename %></span>
        <%= link_to 'Edit', edit_document_path(document), class: "text-sm font-semibold", style: "display:inline-block;float:right;" %>
        <% if current_user.has_role?('admin') %>
          <%= link_to 'Delete', admin_document_path(document), method: :delete, class: "text-sm font-semibold" %>
        <% end %>
    </div>
    <% if current_user.has_role?('admin') %>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= document.user.name %></p>
    <% end %>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= truncate(document.content, length: 50, omission: '...') %></p>
    <div style="display:flex; justify-content:space-between;">
        <%= link_to document_path(document), class: "inline-flex items-center px-3 py-2 text-sm text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
            View
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        <% end %>
        <%= link_to download_document_path(document), class: "inline-flex items-center px-3 py-2 text-sm text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
            Download
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        <% end %>
    </div>
</div>
